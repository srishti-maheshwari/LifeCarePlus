        }
        function Delete(ev) {
            debugger;
            var SingleProduct = $.grep(ProductModel, function (e) {
                return e.ProductCode == ev.data.record.ProductCode;
            });
            var link = '@Url.Action("DeleteProductMaster1030", "Product",new { ProductCode = "-1"})';
