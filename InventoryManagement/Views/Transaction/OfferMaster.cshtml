                    }
                }

                if (validateField) {
                    if ($("#ForDateType").val() == "D") {
                        var start = $("#OfferStartDay").val();
                        var end = $("#OfferEndDay").val();
                        if (start != "" && start != null && start != undefined && end != "" && end != null && end != undefined) {
                            start = parseInt(start);
                            end = parseInt(end);
                            if (start > end) {
                                OpenDialog("dialogMessage", "Start Day should be less than end.", "false");
                                validateField = false;
                                $(".preloader").hide();
                            }
                        }
                    }
                }

                if (validateField) {
                    if ($("#OfferType").val() == "BuythisGetthat" && BuyProductArray.length <= 0) {
                        OpenDialog("dialogMessage", "Please add Buy products.", "false");
                        validateField = false;
                        $(".preloader").hide();
                    }

                    if (FreeProductArray.length == 0) {
                        OpenDialog("dialogMessage", "Please add offer product.", "false");
                        validateField = false;
                        $(".preloader").hide();
                    }
                }

                if (validateField == true) {

                    
                    var ProductArraystring = JSON.stringify(BuyProductArray);
                    $("#ParentProductString").val(ProductArraystring);

                    var FreeProductArraystring = JSON.stringify(FreeProductArray);
                    $("#ProductString").val(FreeProductArraystring);

                    var formdata = new FormData($(this)[0]);

                $.ajax({
                    url: 'SaveOffer',
                    type: 'POST',
                    data: formdata,
                    processData: false,
                    contentType: false,
                    dataType: "json",
                    success: function (objResponse) {
                        $(".preloader").hide();
                        if (objResponse != null) {
                            if (objResponse.ResponseStatus == "OK") {
                                OpenDialog("dialogMessage", "Saved Successfully", "false");
                                window.location.href = "Offers";
                            }
                            else {
                                OpenDialog("dialogMessage", objResponse.ResponseMessage, "false");
                            }
                        }
                        $('#btnSave').attr('disabled', false);
                    },
                    error: function (xhr, data) {
                        $('#btnSave').attr('disabled', false);
                        $(".preloader").hide();
                        console.log(xhr);
                        console.log("Error:", data);
                    }
                });

                 }
            }
            return false;
        });

    });

    function ClearBuyProductdetails() {
        $("#BuyProductName").val("");
