    function toDate(dateStr) {
        var parts = dateStr.split("-");
        return new Date(parts[2], parts[1] - 1, parts[0]);
    }

    function getAllProductNames() {
        $.ajax({
            url: '/Transaction/GetProductList',
            dataType: 'JSON',
            method: 'GET',
            success: function (data) {
                ItemList = [];
                if (data != null) {
                    FullProductList = data;
                    ItemList = data.map(a => a.ProductName);
                }
            },
            error: function (error) {
                console.log(error);
            }
        });
    }

    function getfreeProductList() {
        var AID = $("#AID").val();
        $(".preloader").show();
        $.ajax({
            url: '/Offer/GetOfferProductsList',
            dataType: 'JSON',
            method: 'GET',
            data: { "id": AID },
            success: function (data) {
                var ProductArray = [];

                for (var i = 0; i < data.length; i++) {
                    ProductArray.push({ "Discount": data[i].Discount, "DiscountPer": data[i].DiscountPer, "Rupee": data[i].Rupee,"Scheme": data[i].Scheme,"Confirm":  data[i].Confirm, "ProdCode": data[i].ProductCode, "ProductName": data[i].ProductName, "FreeQty": data[i].Qty, "IsBuyProduct": data[i].IsBuyProduct, "BVApplied": data[i].IsBvApplied, "OnMRP": data[i].OnMRP });
                   
                }

                FreeProductArray = $.grep(ProductArray, function (element, index) {
                    return element.IsBuyProduct == "N";
                });
                fillFreeProductGrid();

                BuyProductArray = $.grep(ProductArray, function (element, index) {
                    return element.IsBuyProduct == "Y";
                });
                fillBuyProductGrid();
            },
            error: function (error) {
                console.log(error);
            }
        });
    }

    function SetSpecificCode(label,id) {
        var objIndex = FullProductList.findIndex((obj => obj.ProductName == label));
        if (objIndex != -1) {
            $("#" + id).val(parseFloat(FullProductList[objIndex].ProductCode));
        }
    }

    function Delete(ev) {
        FreeProductArray = $.grep(FreeProductArray, function (e) {
            return e.ProdCode != ev.data.record.ProdCode;
