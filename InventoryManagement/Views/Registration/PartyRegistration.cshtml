<script type="text/javascript">
    var grid, dialog;
    var PartyGrid = [{}];
    var ActionType = "Add";
    var PartyCode = "";
    $(document).ready(function () {


        $(".preloader").hide();

        GetAllParty();

        $("#btnAdd").click(function () {
            ActionType = "Add";
            PartyCode = "";
            var link='@Url.Action("AddEditPartyRegistration", "Registration",new { IsActionName = "-1", PartyCode = "-2" })';
            link=link.replace("-1",ActionType);
            link=link.replace("-2",PartyCode);
            window.location.href = link;
        });
    });

    function Edit(e){
        ActionType="Edit";
        PartyCode = e.data.record.PartyCode;
        console.log("PartyCode", PartyCode);
        var link = '@Url.Action("AddEditPartyRegistration", "Registration",new { IsActionName = "-1", PartyCode = "-2" })';
        link = link.replace("-1", ActionType);
        link = link.replace("-2", PartyCode);
        link = link.replace("&amp;", "&");
        window.location.href = link;
    }

    function Delete(e) {
        ActionType = "Delete";
        PartyCode = e.data.record.PartyCode;
        $("#IsActionName").val(ActionType);
        $("#PartyCode").val(PartyCode);
        var formdata = new FormData($("#form_party")[0]);
        $.ajax({
            url: '@Url.Action("SavePartyDetails", "Registration")',
            type: 'POST',
            data: formdata,
            processData: false,
            contentType: false,
            dataType: "json",
            success: function (objResponse) {
                if (objResponse != null) {
                    
                        OpenDialog("dialogMessage", objResponse.ResponseMessage, "false");
                        GetAllParty();
                        
                }
                fillGrid();
            },
            error: function (xhr, data) {
                //  return false;
                console.log(xhr);
                console.log("Error:", data);
            }
        });
    }

    function GetAllParty() {
        $(".preloader").show();
        $.ajax({
            url: '/Registration/GetAllPartyList',
            dataType: 'JSON',
            method: 'GET',
            data: { 'IsSupplier': false },
            success: function (objResult) {
                console.log("objResult:", objResult);
                PartyGrid=[{}];
                if (objResult.length > 0) {
                    
                    var i = 0;

                    for (i = 0; i < objResult.length; i++) {
                        var address="";
                        if (objResult[i].Address1 != "" && objResult[i].Address1 != null)
                        {
                            address = objResult[i].Address1+",";
                        }
                        if (objResult[i].Address2 != "" && objResult[i].Address2 != null) {
                            address = address+ objResult[i].Address2+",";
                        }
                        if (address == "") {
                            address = objResult[i].CityName+","+objResult[i].StateName;
                        }
                        else{
                            address = address +objResult[i].CityName+","+objResult[i].StateName;
                        }
                        
                       
                        PartyGrid.push({ "SNo": i + 1, "CinNo": objResult[i].NewFId1, "PartyCode": objResult[i].PartyCode, "PartyName": objResult[i].PartyName, "Group": objResult[i].GroupName, "ParentParty": objResult[i].ParentpartyName, "Tehsil": objResult[i].Tehsil, "PinCode": objResult[i].PinCode, "Address1": address, "MobileNo": objResult[i].MobileNo, "BankAccNo": objResult[i].BankAccNo, "GSTIN": objResult[i].GSTIN, "EmailAddress": objResult[i].EmailAddress, "UserName": objResult[i].objUserDetails.UserName, "Password": objResult[i].objUserDetails.Password, "ActiveStatus": objResult[i].ActiveStatus });
                    }
                    if (PartyGrid[0].SNo == null || PartyGrid[0].SNo == "") {
                        PartyGrid = PartyGrid.splice(1);
                    }
                    console.log("PartyGrid", PartyGrid);
                    fillGrid();
                    $(".preloader").hide();
                }
            },
            error: function (error) {
                $(".preloader").hide();
                console.log(error);
            }
        });
    }


    function OpenDialog(dialogId, Message, isConfirmation) {
        $("#" + dialogId).empty();
        $("#" + dialogId).append('<p>' + Message + '</p>');
        if (isConfirmation == "true") {
            $("#" + dialogId).dialog({
                modal: true,
                buttons: [{
                    text: "Yes",
                    id: "btnYes" + dialogId,
                    click: function () {
                        //var isOpen = $("#dialog").dialog("isOpen");
                        //if (isOpen == true) {
                        //    okCallBack();
                        //}
                        IsYes = true;
                        $("#" + dialogId).dialog("close");


                    }
                },
                {
                    text: "No",
                    id: "btnNo" + dialogId,
                    click: function () {
                        //var isOpen = $("#dialog").dialog("isOpen");
                        //if (isOpen == true) {
                        //    okCallBack();
                        //}
                        IsYes = false;
                        $("#" + dialogId).dialog("close");
                    }
                }
                ]
            });
            $(".ui-dialog-titlebar-close").empty();
            $(".ui-dialog-titlebar-close").append('<i class="fa fa-close"></i>');
        }
        else {


            $("#" + dialogId).dialog({
                modal: true,
                buttons: [{
                    text: "OK",
                    id: "btn" + dialogId,
                    click: function () {
                        //var isOpen = $("#dialog").dialog("isOpen");
                        //if (isOpen == true) {
                        //    okCallBack();
                        //}

                        $("#" + dialogId).dialog("close");


                    }
                }]
            });
            $(".ui-dialog-titlebar-close").empty();
            $(".ui-dialog-titlebar-close").append('<i class="fa fa-close"></i>');
        }

    }
    function fillGrid() {
        console.log("PartyGrid", PartyGrid);

               // StockGrid = StockGrid.splice(1);

        $("#noRecord").hide();
        //console.log("ProductGrid", ProductGrid);
        if (grid != null) {
            grid.destroy();
            $('#grid').empty();

        }
        if (PartyGrid.length ==0) {
            $("#noRecord").show();
        }

        var CanEdit = true;
        var UserAccess = '@ViewBag.UserCanAccess';

        if (UserAccess == 'Edit') {
            CanEdit = false;
        }

            grid = $('#grid').grid({
                dataSource: PartyGrid,
                uiLibrary: 'bootstrap',
                headerFilter: true,
                columns: [
                    { field: 'SNo', title: 'S.No.',width:50, sortable: true, hidden: false, filterable: false },
                        { field: 'PartyCode', title: 'Code', width: 70, sortable: true, hidden: false, filterable: true },
                        { field: 'PartyName', title: 'Party Name', width: 200, sortable: true, hidden: false, filterable: true },
                        { field: 'Group', title: 'Group', sortable: true, width: 100, hidden: false, filterable: true },
                        { field: 'ParentParty', title: 'Parent Party', width: 200, sortable: true, hidden: false, filterable: true },
                        { field: 'GSTIN', title: 'GSTIN', sortable: true, width: 150, hidden: false, filterable: true },
                        { field: 'CinNo', title: 'CinNo', sortable: true, width: 150, hidden: false, filterable: true },                        
                        { field: 'BankAccNo', title: 'Bank A/c No.', width: 150, sortable: true, hidden: false, filterable: true },
                        { field: 'EmailAddress', title: 'Email', width: 200, sortable: true, hidden: false, filterable: true },                       
                        { field: 'Address1', title: 'Address', width: 300, sortable: true, hidden: false, filterable: true },
                        { field: 'Tehsil', title: 'Tehsil', width: 70, sortable: true, hidden: false, filterable: true },
                        { field: 'PinCode', title: 'PinCode', width: 70, sortable: true, hidden: false, filterable: true },
                        { field: 'MobileNo', title: 'Mobile No.', width: 100, sortable: true, hidden: false, filterable: true },
                        { field: 'ActiveStatus', title: 'Active Status', width: 100, sortable: true, hidden: false, filterable: true },
                        { title: '', field: 'Edit', width: 30,hidden:CanEdit, type: 'icon', icon: 'glyphicon-pencil', tooltip: 'Edit', events: { 'click': Edit }, filterable: false },
                        { title: '', field: 'Delete', width: 30, hidden: CanEdit, type: 'icon', icon: 'glyphicon-remove', tooltip: 'Delete', events: { 'click': Delete }, filterable: false }
                ],
                pager: { limit: 20, sizes: [15, 20, 35, 50, 65, 80, 95, 100] }
            });

    }



</script>

